{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ reservation.num }}</td>
            </tr>
            <tr>
                <th>JourArr</th>
