            </tr>
            <tr>
                <th>Nbjours</th>
                <td>{{ reservation.nbjours }}</td>
            </tr>
            <tr>
                <th>JourDep</th>
                <td>{{ reservation.jourDep ? reservation.jourDep|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ResevEtat</th>
                <td>{{ reservation.resevEtat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

